<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="5dp"
    android:layout_margin="2dp"
    android:background="@drawable/other_bac">
    <ImageView
        android:id="@+id/imageview_twotwo1_activity"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:background="@drawable/other_bac"
        />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="包邮"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@mipmap/juxing1"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/t"
            android:id="@+id/text_twotwo2_jinri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            />
    </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textview_twotwo3_liji"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:background="@mipmap/shengyua"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_below="@+id/textview_twotwo2_liji"
                        android:id="@+id/textview_twotwo4_jinri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                       />
                        <TextView
                            android:layout_toRightOf="@+id/textview_three2_jinri"
                            android:id="@+id/textview_three5_jinri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"

                            />

                </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/twptwp6"
                    android:layout_toRightOf="@+id/lala"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/lala1"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/twptwp6"
                    android:layout_toRightOf="@+id/lala"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/lala2"
                    android:text="立即抢购"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"

                    />

            </RelativeLayout>

</LinearLayout>